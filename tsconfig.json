{
  "exclude": ["node_modules"],
  "include": ["src","custom.d.ts","**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "ESNext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "moduleResolution": "node"
  },
}